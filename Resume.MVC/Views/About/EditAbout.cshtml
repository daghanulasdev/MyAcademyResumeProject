@using Resume.MVC.Models
@model TblAbout
@{
    ViewBag.Title = "Hakkimda Duzenleme Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<form method="post">
    @Html.Label("AboutId")
    @Html.TextBoxFor(x => x.AboutId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Resim Url")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <a class="btn btn-dark" href="/About/Index">Geri Don</a>
    <button class="btn btn-primary">Kaydet</button>
</form>

