@using Resume.MVC.Models
@model List<TblExperience>
<div class="experience" id="experience">
    <div class="container">
        <header class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
            <p>My Resume</p>
            <h2>Working Experience</h2>
        </header>
        <div class="timeline">
            
            @foreach (var item in Model)
            {
                int count = Model.IndexOf(item) + 1;
                ViewBag.countResult = "timeline-item " + (count % 2 == 0 ? "right wow slideInLeft" : "left wow slideInRight");
                <div class="@ViewBag.countResult" data-wow-delay="0.1s">
                    <div class="timeline-text">
                        

                            <div class="timeline-date">@item.Date</div>
                            <h2>@item.Title</h2>
                            <h4>@item.SubTitle, San Francisco, CA</h4>
                            <p>
                                @item.Description
                            </p>
                        
                    </div>
                </div>
            }
            </div>
    </div>
</div>
