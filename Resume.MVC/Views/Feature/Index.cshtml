@using Resume.MVC.Models
@model List<TblFeature>
@{
    ViewBag.Title = "One Cikanlar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-primary table-responsive-md table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px;" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>
                <a class="btn btn-danger" href="/Feature/DeleteFeature/@item.FeatureId">Sil</a>
                <a class="btn btn-success" href="/Feature/EditFeature/@item.FeatureId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Feature/AddFeature">One Cikan Ekle</a>
