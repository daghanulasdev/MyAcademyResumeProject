@using Resume.MVC.Models
@model List<TblProject>
@{
    ViewBag.Title = "Projelerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-primary table-responsive-md table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Proje Adi</th>
        <th>Kategori</th>
        <th>Proje linki</th>
        <th>Islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px;" /></td>
            <td>@item.ProjectName</td>
            <td>@item.TblCategory.CategoryName</td>
            <td><a href="@item.ProjectUrl" target="_blank">Proje Linki</a></td>
            <td>
                <a class="btn btn-danger" href="/Project/DeleteProject/@item.ProjectId">Sil</a>
                <a class="btn btn-success" href="/Project/EditProject/@item.ProjectId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Project/AddProject">Proje Ekle</a>