@model Resume.MVC.Models.TblTestimonial
@{
    ViewBag.Title = "Referans Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<form method="post">
    <input type="text" name="ImageUrl" class="form-control" placeholder="Resim Url Ekleyiniz" />
    <br />
    <input type="text" name="Title" class="form-control" placeholder="Unvan Ekleyiniz" />
    <br />
    <input type="text" name="Comment" class="form-control" placeholder="Yorum Ekleyiniz" />
    <br />
    <input type="text" name="CustomerName" class="form-control" placeholder="Referans Ismi Ekleyiniz" />
    <br />
    <select name="Status" class="form-control">
        <option value="True">Aktif</option>
        <option value="False">Pasif</option>
    </select>
    <br />
    <button class="btn btn-info">Ekle</button>
</form>
<br />
<a class="btn btn-dark" href="/Testimonial/Index">Geri Don</a>


