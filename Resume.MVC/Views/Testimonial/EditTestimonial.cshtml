@using Resume.MVC.Models
@model TblTestimonial
@{
    ViewBag.Title = "Referans Duzenleme Sayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<form method="post">
    @Html.Label("TestimonialId")
    @Html.TextBoxFor(x => x.TestimonialId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Resim Url")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Referans Ismi")
    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
    <br />
    @Html.Label("Yorum")
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Unvan")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <select name="Status" class="form-control">
        <option value="True">Aktif</option>
        <option value="False">Pasif</option>
    </select>
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
<br />
<a class="btn btn-dark" href="/Testimonial/Index">Geri Don</a>
