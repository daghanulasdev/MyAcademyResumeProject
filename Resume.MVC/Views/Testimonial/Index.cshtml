@using Resume.MVC.Models
@model List<TblTestimonial>
@{
    ViewBag.Title = "Referanslarim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-primary table-responsive-md table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Unvan</th>
        <th>Yorum</th>
        <th>Durum</th>
        <th>Islemler</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px;" /></td>
            <td>@item.CustomerName</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td>
                @if (item.Status.HasValue)
                {
                    if (item.Status.Value)
                    {
                        <span style="color: green;">Aktif</span>
                    }
                    else
                    {
                        <span style="color: red;">Pasif</span>
                    }
                }
                
            </td>
            <td>
                <a class="btn btn-danger" href="/Testimonial/DeleteTestimonial/@item.TestimonialId">Sil</a>
                <a class="btn btn-success" href="/Testimonial/EditTestimonial/@item.TestimonialId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-primary" href="/Testimonial/AddTestimonial">Referans Ekleme</a>

